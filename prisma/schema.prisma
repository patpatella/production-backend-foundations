generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum JobStatus {
  OPEN
  COMPLETED
}

model Job {
  id          String    @id @default(uuid())
  title       String
  description String
  category    String
  status      JobStatus @default(OPEN)
  posterId    String

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([posterId])
  @@index([status])
}
